  <div class="col-span-12 md:col-span-6" id="<%= dom_id food %>">
    <div class="card card-compact bg-base-100 shadow-2xl h-full">
    <%= turbo_frame_tag food do %>
      <div class="card-body">
        <p class="my-5 text-xl">
          <%= food.name %>
          <span class="badge badge-lg badge-<%= food.get_kind_color%> badge-outline">
            <%= food.kind.name %>
          </span>
        </p>
        <h2 class="mt-2">
          <%= "¥ #{food.price}" %>
        </h2>
        <p>
          <%= food.memo %>
        </p>
        <% if loyalty(food, :foods).update? %>
          <div class="justify-end card-actions">
            <%= link_to t('.edit'), edit_food_path(food), class: "btn btn-outline btn-primary" %>
            <%= button_to "削除", food_path(food), method: :delete, class: "btn btn-outline btn-primary", form: { data: { turbo_confirm: "本当に削除しますか？" } } %>
          </div>
        <% end %>
      </div>
    <% end %>
    </div>
  </div>